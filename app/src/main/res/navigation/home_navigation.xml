<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.gsrg.codewars.ui.fragments.search.SearchFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_challengesFragment"
            app:destination="@id/challengesFragment" />
    </fragment>
    <fragment
        android:id="@+id/challengesFragment"
        android:name="com.gsrg.codewars.ui.fragments.ChallengesFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_challenges" />
</navigation>